//fonts
mainFont = 'Raleway';
secFont = 'Dosis';
headingFont = 'Amatic SC';

//colors
darkPoint = rgba(0, 0, 0, 1);
lightPoint = rgba(255, 255, 255, 1);
linkColor = rgba(0, 102, 192, 1);
linkHoverColor = rgba(196, 85, 0, 1);

* {
	box-sizing border-box
}

ul, li, ol {
	list-style none
	margin: 0
	padding: 0
}

h1, h2, h3, h4, h5, h6, p {
	margin: 0
	padding: 0
}

a {
	color linkColor
	text-decoration: none
	
	&:hover {
		color linkHoverColor
	}
}

a:visited {
	color linkColor
	text-decoration: none
}

img {
	max-width 100%
	max-height 100%
}

body, html {
	margin: 0
	padding: 0
	width 100%
	height 100%
	font-size 20px
	font-family mainFont, sans-serif
}
.content {
	max-width 1280px
	margin: 0 auto
	padding-bottom 40px
}

.header {
	width 100%
	padding-bottom 20px
	
	&-logo {
		text-align: center
		background: darkPoint
		
		a {
			font-size 80px
			font-weight: bolder
			font-family: headingFont
			color lightPoint
		}
	}
}

.book {
	&-list {
		font-size 0
		max-width: 1280px
		margin: 0 auto
		
		&__item {
			font-size 20px
			margin-bottom 25px
			vertical-align top
			padding-bottom 10px
			position: relative
			
			&:after {
				content ''
				position: absolute
				bottom 0
				left 50%
				width 10%
				transform translateX(-50%)
				border-bottom 1px solid darkPoint
			}
			
			&__item {
				display: flex
				width 100%
			}
		}
	}
	
	&-cover, &-info {
		display: inline-block
		vertical-align: top
	}
	
	&-info {
		width 70%
		padding 0 10px
	}
	
	&-cover {
		max-width 200px
		width 30%
		text-align: center
		
		img {
			max-width 70%
			// height: auto
		}
	}
	
	&-title {
		font-size 30px
		display: inline-block
		padding-bottom 10px
		font-weight: bold
		margin-right 10px
		
		&__link {
			border-bottom 2px solid linkColor
			color linkColor
			
			&:hover {
				opacity .7
				color linkHoverColor
				border-bottom-color linkHoverColor
			}
		}
	}
	
	&-author {
		font-size 0
		padding-bottom 10px
		
		&__prefix {
			padding-right 5px
			font-family secFont
		}
		
		&-author {
			display: inline-block
			font-size 20px
			width 50%
			
			&__prefix {
				padding-right 5px
				font-family secFont
			}
			
			&__name {
				&__link {
					&:hover {
						color linkHoverColor
					}
				}
			}
		}
	}
	
	&-year {
		display: inline-block
		font-size 20px
		width 50%
	}
	
	&-description {
		width 100%
		
		&__heading {
			font-weight: bold
			font-family secFont
			padding-bottom 5px
		}
		
		&__text {
			// border 1px solid rgba(darkPoint, .5)
				
			&:first-letter {
				color linkHoverColor
				font-weight: bolder
				padding-left 20px
				font-size 25px
			}	
		}
	}
	
	&-item {
		padding: 0 20px
		max-width 1280px
		margin: 0 auto
		
		&__heading {
			padding 0 20px 20px
			
			&__title {
				font-size 40px
				display: inline-block
				vertical-align: top
				color darkPoint
				font-weight bolder
				padding-right 20px
			}
			
			&__year {
				font-size 40px
				display: inline-block
				vertical-align: top
				color darkPoint
				font-weight 400
			}
		}
		
		&__content {
			font-size 0
			
			&__author {
				padding: 0 20px 10px
			}
			
			&__description {
				padding 0 20px
			}
			
			&__info, &__cover {
				display: inline-block
				font-size 20px
				vertical-align: top
			}
			
			&__info {
				width 70%
			}
			
			&__cover {
				width 30%
			}
		}
	}
}

.author {
	
	&-wrapper {
		padding-bottom 20px
		margin-bottom 20px
		position: relative
		
		&:after {
			content ''
			position: absolute
			width 20%
			left 50%
			bottom 0
			transform translateX(-50%)
			border-bottom 1px solid darkPoint
		}
	}
	
	&-name {
		padding-bottom 10px
	}
	
	&-image {
		display: inline-block
		vertical-align: top
		width 30%
	}
	
	&-info {
		display: inline-block
		vertical-align: top
		width 70%
		padding-left 20px
	}
	
	&-books {
		&__heading {
			text-align: center
			padding 0 20px
			background: darkPoint
			margin-bottom 20px
			
			&__heading {
				display: inline-block
				font-size 40px
				color lightPoint
			}
		}
		
		&-list {
			font-size 0
			
			&__item {
				display: inline-block
				font-size 20px
				width 50%
				text-align: center
				
				&__cover {
					max-width 200px
					width 30%
					margin: 0 auto
					text-align: center
					
					img {
						display: inline-block
						margin: 0 auto
					}
				}
			}
		}
	}
	
	&-small {
		&__description {
			padding-bottom 20px
		}
	}
}



















